<!DOCTYPE html>
<html lang="en">
<script>
    function addTableData(items) {
      const table = document.getElementById("tableBody");
      items.forEach( item => {
        let row = table.insertRow();
        let billingID = row.insertCell(0);
        let priceFinal = row.insertCell(1);
        let dueDate = row.insertCell(2);

            
        billingID.textContent = item.billingID;
        priceFinal.textContent = item.priceFinal;
        dueDate.textContent = item.dueDate;     
      });
    }

    async function getData(){
        const res = await fetch('/auth/viewBilling');
        const data = await res.json();
        addTableData(data);
    }

</script>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
    <link rel="stylesheet" href="/style.css">
    <title>Document</title>
</head>
<body onload="getData()">
    <nav>
        <h3>Medical Database</h3>
        <ul>
            <li><a href="/">Home</a></li>
            <li><a href="/auth/logout">Logout</a></li>
        </ul>
    </nav>

    <header class="jumbotron">
        <div class="container">
            <div class="row">
                <div class="col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">
                <h1 class="text-center">Appointment History</h1>
                </div>
            </div>
        </div>
    </header>
    <div class="container" style="display: flex;">
        <div style="width: 100%;" class="card">
            <div class="card-body">
                <table class="table table-striped table-responsive" id="billTable">
                    <thead>
                        <tr>
                            <th>Billing ID</th> <th>Final Price</th> <th>Due Date</th>
                        </tr>                
                    </thead>
                    <tbody id ='tableBody' class="card-body">

                    </tbody>

                </table>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js" integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf" crossorigin="anonymous"></script>
</body>
</html>